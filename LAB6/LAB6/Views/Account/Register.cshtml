@{
    ViewData["Title"] = "Register";
}

@model RegisterModel

<h2>Register</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Login">Login</label><br/>
            <input type="text" asp-for="Login"/>
            <span asp-validation-for="Login"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="FirstName">First Name</label><br/>
            <input type="text" asp-for="FirstName"/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="LastName">Last Name</label><br/>
            <input type="text" asp-for="LastName"/>
            <span asp-validation-for="LastName"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="Patronymic">Patronymic</label><br/>
            <input type="text" asp-for="Patronymic"/>
            <span asp-validation-for="Patronymic"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="Password">Password</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="ConfirmPassword">Confirm Password</label><br/>
            <input asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="DateOfBirth">Date Of Birth</label><br/>
            <input asp-for="DateOfBirth" type="date" max="2004-01-01">
            <span asp-validation-for="DateOfBirth"></span>
        </div>
        <div style="margin-top: 10px">
            <input type="submit" value="Register Now!"/>
        </div>
    </div>
</form>