@{
    ViewData["Title"] = "Settings";
}

@model ClientProfileModel

<form asp-action="UpdateClient" asp-controller="Client" asp-anti-forgery="true" method="post">

    <div style="margin-top: 10px">
        <label asp-for="FirstName">First Name</label><br/>
        <input type="text" asp-for="FirstName"/>
        <span asp-validation-for="FirstName"></span>
    </div>
    <div style="margin-top: 10px">
        <label asp-for="LastName">Last Name</label><br/>
        <input type="text" asp-for="LastName"/>
        <span asp-validation-for="LastName"></span>
    </div>
    <div style="margin-top: 10px">
        <label asp-for="Patronymic">Patronymic</label><br/>
        <input type="text" asp-for="Patronymic"/>
        <span asp-validation-for="Patronymic"></span>
    </div>
    <div style="margin-top: 10px">
        <input type="submit" value="Register Now!"/>
    </div>
</form>